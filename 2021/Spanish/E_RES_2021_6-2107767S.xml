            <paragraph eId="para_10" class="H23">
              <content eId="para_10__content">
                <p xml:space="preserve">		Cuadro 2</p>
              </content>
            </paragraph>
            <paragraph eId="para_11" class="H23">
              <content eId="para_11__content">
                <p xml:space="preserve">
                  <span class="bold">		18º período de sesiones del Foro de las Naciones Unidas sobre los Bosques, 2023 (período de sesiones de carácter técnico)</span>
                </p>
              </content>
            </paragraph>
            <container name="table" eId="container_12">
              <table eId="container_12_table_1" akn4un:data-borders-info="{&quot;Top&quot;:{&quot;Style&quot;:&quot;none&quot;,&quot;Size&quot;:0,&quot;Space&quot;:0},&quot;Right&quot;:{&quot;Style&quot;:&quot;none&quot;,&quot;Size&quot;:0,&quot;Space&quot;:0},&quot;Bottom&quot;:{&quot;Style&quot;:&quot;none&quot;,&quot;Size&quot;:0,&quot;Space&quot;:0},&quot;Left&quot;:{&quot;Style&quot;:&quot;none&quot;,&quot;Size&quot;:0,&quot;Space&quot;:0},&quot;InsideHorizontal&quot;:{&quot;Style&quot;:&quot;none&quot;,&quot;Size&quot;:0,&quot;Space&quot;:0},&quot;InsideVertical&quot;:{&quot;Style&quot;:&quot;none&quot;,&quot;Size&quot;:0,&quot;Space&quot;:0}}" akn4un:data-width-type="8554-dxa">
